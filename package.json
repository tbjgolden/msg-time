{
  "name": "msg-time",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/esm/index.d.ts",
  "homepage": "https://github.com/tbjgolden/msg-time",
  "author": {
    "name": "Tom Golden",
    "email": "oss@tom.bio",
    "url": "https://tom.bio"
  },
  "type": "module",
  "bin": {
    "msg-time": "./dist/cli/index.mjs"
  },
  "engines": {
    "node": ">=16.14.0",
    "npm": ">=6.8.0"
  },
  "scripts": {
    "build": "xnr ./.scripts/build.ts",
    "check-build": "xnr ./.scripts/checkBuild.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest",
    "coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest --coverage",
    "watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest --watch",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^29.2.4",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "easier-node": "^0.0.1-beta.2",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "jest": "^29.3.1",
    "lint-time": "^0.1.0",
    "prettier": "^2.5.1",
    "pub-time": "^0.1.0",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.6.4",
    "xnr": "^1.0.1"
  },
  "files": [
    "dist"
  ],
  "simple-git-hooks": {
    "commit-msg": "npx --no -- commitlint --edit \"\"",
    "pre-commit": "npx lint-time",
    "pre-push": "npx jest -o --coverage=false --passWithNoTests"
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always"
  },
  "lint-time": [
    [
      "*.ts",
      "npx eslint -c .eslintrc.cjs --cache --fix --max-warnings=0"
    ],
    [
      "*.{ts,js,cjs,mjs,json}",
      "npx prettier --ignore-path .gitignore --write"
    ]
  ],
  "jest": {
    "clearMocks": true,
    "coverageReporters": [
      "json-summary",
      "text"
    ],
    "errorOnDeprecated": true,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/lib/**/*.test.[tj]s"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/xnr/jest.js"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
